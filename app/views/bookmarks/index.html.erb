<div class="row">
  <div class="col-md-8">

    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to @topic.title, @topic %>
        </h4>
        <% @topic.bookmarks.each do |bookmark| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <%= link_to bookmark.url, bookmark.url %>
            </h4>
            <small>
                submitted <%= time_ago_in_words(bookmark.created_at) %> ago <br>
              </small>
          </div>
        </div>
        <% end %>
        <small>


        </small>
      </div>
    </div>


  </div>
  <div class="col-md-4">
    <%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
  </div>
</div>
